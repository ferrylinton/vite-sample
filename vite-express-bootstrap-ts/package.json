{
  "name": "vite-express-bootstrap-ts",
  "version": "1.0.0",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "npm run build-bootstrap && cross-env NODE_ENV=development vite",
    "build": "rimraf dist && npm run build-bootstrap && cross-env NODE_ENV=production vite build",
    "build-css": "postcss ./src/assets/css/main.css -o ./dist/main.css",
    "start": "cd dist && cross-env NODE_ENV=production node server.js",
    "start-install": "cd dist && npm install --omit=dev",
    "build-variables": "tsx color.ts",
    "build-bootstrap": "cross-env NODE_ENV=development vite build --config vite.config.bootstrap.ts"
  },
  "keywords": [
    "vite",
    "express",
    "bootstrap"
  ],
  "author": "ferrylinton",
  "license": "ISC",
  "description": "Simple Express App with Bootstrap",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cross-env": "^10.0.0",
    "dotenv": "^17.1.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-favicon": "^2.0.4",
    "i18n": "^0.15.1",
    "mongodb": "^6.18.0",
    "theme-toggles": "^4.10.1",
    "winston": "^3.17.0",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@csstools/postcss-relative-color-syntax": "^3.0.10",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@popperjs/core": "^2.11.8",
    "@types/bootstrap": "^5.2.10",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/i18n": "^0.13.12",
    "@types/node": "^24.0.10",
    "@types/postcss-import": "^14.0.3",
    "autoprefixer": "^10.4.21",
    "axios": "^1.11.0",
    "bootstrap": "^5.3.7",
    "cssnano": "^7.1.0",
    "date-fns": "^4.1.0",
    "eslint": "^9.30.1",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.3",
    "hamburgers": "^1.2.1",
    "postcss": "^8.5.6",
    "postcss-calc": "^10.1.1",
    "postcss-cli": "^11.0.1",
    "postcss-color-mod-function": "^4.1.1",
    "postcss-custom-properties": "^14.0.6",
    "postcss-discard-comments": "^7.0.4",
    "postcss-import": "^16.1.1",
    "postcss-preset-env": "^10.2.4",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup-plugin-node-externals": "^8.0.1",
    "sass-embedded": "^1.90.0",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
