<!DOCTYPE html>
<html translate="no" lang="en">

<head>
  <%- include('../partials/meta'); -%>
    <title>Preview â€¢ Pico CSS</title>
</head>

<body>
  <%- include('../partials/sidebar'); -%>
    <main>
      <div class="todoes">

        <section class="d-flex justify-content-center align-items-end gap-2 mt-2 mb-4">
          <h2 class="title">
            <%- include('../icons/tasks-icon'); %>
              <span>Detail</span>
          </h2>
        </section>

        <table class="table table-striped border detail">
          <tbody>
            <tr>
              <th>ID</th>
              <td>
                <%= todo.id %>
              </td>
            </tr>
            <tr>
              <th>Task</th>
              <td>
                <span class="text-break"><%= todo.task %></span>
              </td>
            </tr>
            <tr>
              <th>Done</th>
              <td>
                <%= todo.done ? 'Yes' : 'No' %>
              </td>
            </tr>
            <tr>
              <th>Created At</th>
              <td data-convertToDate>
                <%= todo.createdAt %>
              </td>
            </tr>
            <tr>
              <th>Updated At</th>
              <td data-convertToDate>
                <%= todo.updatedAt %>
              </td>
            </tr>
          </tbody>
        </table>

        <div class="d-flex gap-2">
          <a href="/" role="button" class="btn btn-secondary">
            <%- include('../icons/previous-icon'); -%>
              <span>Back</span>
          </a>
          <button type="button" class="btn btn-danger" data-delete="<%= todo.id %>">
            <%- include('../icons/delete-icon'); -%>
              <span>Delete</span>
          </button>
        </div>

      </div>

    </main>
    <%- include('../partials/confirm', {message: 'Delete data?'}); %>
    <script type="module" src="/src/assets/js/main.ts?t=<%= new Date().getTime() %>"></script>
</body>

</html>