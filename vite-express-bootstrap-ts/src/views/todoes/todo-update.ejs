<!DOCTYPE html>
<html translate="no" lang="en">

<head>
  <%- include('../partials/head', {title: "Todo App With Bootstrap" }); %>
</head>

<body>
  <%- include('../partials/sidebar'); -%>
  <main>
    <div class="todoes">
      <section class="d-flex justify-content-center align-items-end gap-2 mt-2 mb-4">
        <h2 class="title">
          <%- include('../icons/tasks-icon'); %>
          <span>
            <%= t('update') %>
          </span>
        </h2>
      </section>
      <form method="post" action="/todoes/update/<%= todo.id %>" autocomplete="off">
        <div class="mb-3">
          <label class="form-label" for="task"> <%= t('task') %> </label>
          <input class="form-control" type="text" id="task" name="task" placeholder="<%= t('task') %>" aria-label="Task" value="<%= todo.task %>" />
        </div>

        <div class="form-check mb-3">
          <input class="form-check-input" type="checkbox" role="switch" id="done" name="done" value="<%= todo.done %>" <%= isChecked(todo.done) %> />
          <label class="form-check-label ms-2" for="done"><%= t('done') %></label>
        </div>

        <div class="d-flex gap-2 my-4">
          <a href="/" role="button" class="btn btn-secondary btn-icon">
            <%- include('../icons/previous-icon'); -%>
            <span><%= t('back') %></span>
          </a>
          <button type="submit" class="btn btn-primary btn-icon">
            <%- include('../icons/update-icon'); -%>
            <span><%= t('save') %></span>
          </button>
        </div>
      </form>
    </div>
  </main>

  <script type="module" src="/src/assets/js/main.ts?t=<%= new Date().getTime() %>"></script>
</body>

</html>