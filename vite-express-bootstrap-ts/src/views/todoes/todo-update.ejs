<!DOCTYPE html>
<html translate="no" lang="en">

<head>
    <%- include('../partials/meta'); -%>
        <title>Preview â€¢ Pico CSS</title>
</head>

<body>
    <%- include('../partials/sidebar'); -%>
        <main>
            <div class="pico todoes">
                <section class="flex justify-center mt-4 mb-8">
                    <h2 class="title">
                        <%- include('../icons/tasks-icon'); %>
                            <span>Update</span>
                    </h2>
                </section>
                <form method="post" action="/todoes/update/<%= todo.id %>" autocomplete="off">
                    <div class="mb-3">
                        <label class="form-label" for="task">Task</label>
                        <input class="form-control" type="text" id="task" name="task" placeholder="Task"
                            aria-label="Task" value="<%= todo.task %>">
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" role="switch" id="done" value="<%= todo.done ? 'true' : 'false' %>"
                            name="done" <%=todo.done ? 'checked' : '' %>>
                        <label class="form-check-label" for="done">
                            Done
                        </label>
                    </div>

                    <div class="d-flex gap-2">
                        <a href="/" role="button" class="btn btn-secondary">
                            <%- include('../icons/previous-icon'); -%>
                                <span>Back</span>
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <%- include('../icons/update-icon'); -%>
                                <span>Update</span>
                        </button>
                    </div>

                </form>
            </div>

        </main>

        <script type="module" src="/src/assets/js/main.ts?t=<%= new Date().getTime() %>"></script>
</body>

</html>