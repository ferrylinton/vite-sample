<!DOCTYPE html>
<html translate="no" lang="en">

<head>
    <%- include('../partials/meta'); -%>
        <title>Preview â€¢ Pico CSS</title>
</head>

<body>
    <%- include('../partials/sidebar'); -%>
        <main>
            <div class="todoes">

                <section class="d-flex justify-content-center align-items-end gap-2 mt-2 mb-4">
                    <h2 class="title">
                        <%- include('../icons/tasks-icon'); %>
                            <span>Create</span>
                    </h2>
                </section>

                <form class="needs-validation" method="post" action="/todoes/create" autocomplete="off">

                    <div class="mb-3">
                        <label class="form-label" for="task">Task</label>
                        <input
                            class="form-control form-control-lg <%= (typeof errorValidations !== 'undefined' && errorValidations.task) ? 'is-invalid' : '' %>"
                            maxlength="150" ="text" id="task" name="task" placeholder="Task" aria-label="Task">

                        <% if(typeof errorValidations !== 'undefined'  && errorValidations.task) { %>
                            <div class="invalid-feedback">
                                <%= t(errorValidations.task.errors[0]) %>
                            </div>
                            <% } %>
                    </div>

                    <div class="d-flex gap-2">
                        <a href="/" role="button" class="btn btn-secondary btn-ico">
                            <%- include('../icons/previous-icon'); -%>
                                <span>Back</span>
                        </a>
                        <button type="submit" class="btn btn-primary btn-icon">
                            <%- include('../icons/save-icon'); -%>
                                <span>Create</span>
                        </button>
                    </div>

                </form>
            </div>

        </main>

        <script type="module" src="/src/assets/js/main.ts?t=<%= new Date().getTime() %>"></script>
</body>

</html>