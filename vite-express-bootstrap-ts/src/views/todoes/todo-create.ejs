<!DOCTYPE html>
<html translate="no" lang="en">
	<head>
		<%- include('../partials/head', {title: "Todo App With Bootstrap"}); %>
	</head>

	<body>
		<%- include('../partials/sidebar'); -%>
		<main>
			<div class="todoes">
				<section class="d-flex justify-content-center align-items-end gap-2 mt-2 mb-4">
					<h2 class="title">
						<%- include('../icons/tasks-icon'); %>
						<span><%= t('create') %></span>
					</h2>
				</section>

				<form
					class="needs-validation"
					method="post"
					action="/todoes/create"
					autocomplete="off"
				>
					<div class="mb-3">
						<label class="form-label" for="task"><%= t('task') %></label>
						<input
							class="form-control form-control-lg <%= (typeof errorValidations !== 'undefined' && errorValidations.task) ? 'is-invalid' : '' %>"
							maxlength="150"
							="text"
							id="task"
							name="task"
							placeholder="<%= t('task') %>"
							aria-label="Task"
						/>

						<% if(typeof errorValidations !== 'undefined' && errorValidations.task) { %>
						<div class="invalid-feedback">
							<%= t(errorValidations.task.errors[0]) %>
						</div>
						<% } %>
					</div>

					<div class="d-flex gap-2">
						<a href="/" role="button" class="btn btn-secondary btn-icon">
							<%- include('../icons/previous-icon'); -%>
							<span><%= t('back') %></span>
						</a>
						<button type="submit" class="btn btn-primary btn-icon">
							<%- include('../icons/save-icon'); -%>
							<span><%= t('save') %></span>
						</button>
					</div>
				</form>
			</div>
		</main>

		<script type="module" src="/src/assets/js/main.ts?t=<%= new Date().getTime() %>"></script>
	</body>
</html>
